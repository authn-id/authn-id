{
  "name": "@authn-id/browser",
  "version": "0.1.0",
  "description": "Simple authentication library",
  "main": "src/index.ts",
  "types": "src/index.js",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Peerborough <contact@peerborough.com>",
  "homepage": "https://authn.id/",
  "repository": {
    "type": "git",
    "url": "https://github.com/authn-id/authn-id",
    "directory": "packages/browser"
  },
  "keywords": [
    "authentication",
    "authenticator",
    "MFA",
    "2FA",
    "webauthn",
    "passkeys",
    "passwordless"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts",
    "dev": "npm run build --watch",
    "lint": "TIMING=1 eslint \"**/*.ts*\"",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "clean-package": "../../clean-package.config.json",
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "tsconfig": "*",
    "typescript": "^4.5.2"
  },
  "tsup": {
    "clean": true,
    "format": [
      "cjs",
      "esm",
      "iife"
    ],
    "globalName": "AuthnId",
    "minify": true
  }
}
